{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/grp-bork/reCOGnise/main/nextflow_schema.json",
  "title": "porTraits nextflow schema",
  "description": "porTraits predicts microbial phenotypic traits based on genomic content of input prokaryotic genomes.",
  "type": "object",
  "definitions": {
    "required": {
      "title": "Input/Output Parameters",
      "type": "object",
      "description": "",
      "default": "",
      "properties": {
        "input_dir": {
          "type": "string",
          "format": "directory-path",
          "description": "Directory path to genome fasta files"
        },        
        "output_dir": {
          "type": "string",
          "format": "directory-path",
          "description": "Directory path to output files"
        },
        "recognise_marker_genes": {
          "type": "string",
          "description": "Directory path to COG markers",
          "hidden": true,
          "default": "recognise_marker_genes/"
        },
        "gtdbtk_data": {
          "type": "string",
          "description": "Directory path to GTDB database",
          "help_text": "This should be the release directory of the GTDB database",
          "hidden": true,
          "default": "GTDB/release220"
        },
        "metatraits_models": {
          "type": "string",
          "description": "Directory path to the porTraits model database",
          "help_text": "This should be the root directory of the porTraits database",
          "hidden": true,
          "default": "porTraits/"
        },
        "eggnog_db": {
          "type": "string",
          "description": "Directory path to the eggNOG database",
          "help_text": "This should be the version directory of the eggNOG database",
          "hidden": true,
          "default": "eggnog-mapper/5.0.2/"
        }           
      },
      "required": ["output_dir", "input_dir", "recognise_marker_genes", "gtdbtk_data", "metatraits_models", "eggnog_db"]
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/required"
    }
  ]
}
